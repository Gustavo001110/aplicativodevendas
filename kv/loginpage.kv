<LoginPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icones/bg1.png'
        Label:
            text: '[color=#00CFDB] CONTROLE DE VENDAS[/color]'
            bold: True
            markup: True
            pos_hint: {'right': 0.9, 'top': 0.9}
            size_hint: 0.8, 0.2
        TextInput:
            id: email
            hint_text: 'E-mail'
            pos_hint: {'right': 0.9, 'top': 0.7}
            size_hint: 0.8, 0.1
        TextInput:
            password: True
            id: senha
            hint_text: 'Senha'
            pos_hint: {'right': 0.9, 'top': 0.55}
            size_hint: 0.8, 0.1
        Label:
            id: mensagem_login
            text: '[color=#00CFDB] Fa√ßa seu login[/color]'
            bold: True
            markup: True
            pos_hint: {'right': 0.9, 'top': 0.4}
            size_hint: 0.8, 0.1
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == 'normal' else 'icones/botao_apertado.png'
            on_release: app.fire.fazer_login(email.text, senha.text)
            text: 'Fazer login'
            pos_hint: {'right': 0.45, 'top': 0.3}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == 'normal' else 'icones/botao_apertado.png'
            on_release: app.fire.criar_conta(email.text, senha.text)
            text: 'Criar conta'
            pos_hint: {'right': 0.95, 'top': 0.3}
            size_hint: 0.4, 0.2

